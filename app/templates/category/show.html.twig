{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.category_view'|trans({'%id%': category.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.category_view'|trans({'%id%': category.id}) }}</h1>
    {% if category is defined %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ category.id }}</dd>
            <dt>{{ 'label.name'|trans }}</dt>
            <dd>{{ category.name }}</dd>
            <dt>{{ 'label.description'|trans }}</dt>
            <dd>{{ category.description }}</dd>
            <dt>{{ 'label.created_at'|trans }}</dt>
            <dd>{{ category.createdAt|date('Y/m/d H:i:s') }}</dd>
            <dt>{{ 'label.updated_at'|trans }}</dt>
            <dd>{{ category.updatedAt|date('Y/m/d H:i:s') }}</dd>
        </dl>
        <p>
            <a href="{{ path('category_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.category_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}
