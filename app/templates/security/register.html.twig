{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.register'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.register'|trans }}</h1>
    {{ form_start(form) }}

    {% if not form.vars.valid %}
        {% include 'default/_single_alert_message.html.twig' with {
            type: 'danger',
            message: 'message.form_error'|trans,
        } %}

        {# Display all form errors for debugging purposes #}
        <ul>
            {% for error in form.vars.errors %}
                <li>{{ error.message }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    {% for field in form %}
        <div class="form-group{% if field.vars.required %} required{% endif %}">
            {{ form_label(field) }}
            {{ form_widget(field) }}
            {{ form_errors(field) }}
        </div>
    {% endfor %}

    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.sign_up'|trans }}" class="btn btn-primary"/>
    </div>

    {{ form_end(form) }}
{% endblock %}
